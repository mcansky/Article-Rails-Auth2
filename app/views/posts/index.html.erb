<h1>Posts</h1>

<table>
  <tr>
    <th>Titre</th>
		<th>Auteur</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= link_to post.title, post %></td>
			<td><%= link_to post.user.login, post.user %></td>
      <td><%= link_to "Editer", edit_post_path(post) if current_user && (current_user == post.user || current_user.is_moderator?) %></td>
      <td><%= link_to "Supprimer", post, :confirm => 'Etes vous sÃ»r ?', :method => :delete if current_user && (current_user == post.user || current_user.is_moderator?) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Nouveau Post", new_post_path if current_user %></p>
